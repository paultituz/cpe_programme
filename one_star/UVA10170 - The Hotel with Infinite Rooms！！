#include <iostream>
#include <vector>
#include <algorithm>
#include <sstream>
#include <ctype.h>
#include <string>
#include <cmath>
#include <iomanip>
//UVA10170 - The Hotel with Infinite Rooms
using namespace std;

int main()
{
    long long a,b;
    while(cin>>a>>b)
    {
        int cal;

        cal=a;
        b=b-a;

        while(b>0)
        {
            cal++;
            b=b-cal;
        }

        cout<<cal<<endl;



    }

    return 0;
}
